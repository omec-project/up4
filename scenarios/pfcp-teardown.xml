<scenario name="pfcp-teardown" description="PFCP client teardown">
    <group name="Pfcp-Teardown">
        <step name="Pfcp-Client-Stop"
              exec="pfcp-client-cmd stop"/>
        <step name="Check-Pfcp-Agent-Survived-Teardown" requires="~Pfcp-Client-Stop"
              exec="pfcp-agent-check-alive"/>
        <step name="Check-No-Flows-After-Pfcp-Teardown" requires="Pfcp-Client-Stop"
              exec="onos-cli-grep ${OCI} up4:read-flows '0 flows found'"/>
    </group>
</scenario>