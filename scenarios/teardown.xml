<scenario name="teardown" description="Environment teardown">
    <group name="Teardown">
        <group name="Dump-Logs">
            <parallel var="${OD#}">
                <step name="Log-Dump-${OD#}"
                      exec="docker-compose logs ${OD#}"/>
            </parallel>
        </group>
        <step name="Docker-Compose-Down" requires="Dump-Logs"
              exec="docker-compose down -t0"/>
    </group>
</scenario>