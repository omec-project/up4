<scenario name="pfcp-client-failure"
          description="Kill and restore the PFCP Client (MockSMF) and verify the PFCP agent reacts correctly">
    <group name="Pfcp-Client-Failure">
        <group name="Pfcp-Setup-Fwd">
            <step name="Pfcp-Session-Create"
                  exec="bin/pfcp-client-cmd establish"/>
            <step name="Pfcp-Session-Modify" requires="^" delay="1"
                  exec="bin/pfcp-client-cmd modify"/>
        </group>

        <step name="Check-Flows-Installed" requires="Pfcp-Setup-Fwd" delay="2"
              exec="onos-cli-grep ${OCI} up4:read-flows '2 flows found'"/>

        <step name="Kill-Pfcp-Client" requires="^"
              exec="bin/pfcp-client-cmd kill"/>

        <step name="Check-Flows-Deleted-On-Pfcp-Client-Failure" requires="^" delay="10"
              exec="onos-cli-grep ${OCI} up4:read-flows '0 flows found'"/>

        <group name="Pfcp-Client-Revive" requires="~Check-Flows-Deleted-On-Pfcp-Client-Failure">
            <step name="Pfcp-Client-Start-Again" requires="~Check-Flows-Deleted-On-Pfcp-Client-Failure"
                  exec="bin/pfcp-client-cmd start"/>
            <step name="Pfcp-Client-Associate-Again" requires="^" delay="1"
                  exec="bin/pfcp-client-cmd associate"/>
        </group>

        <group name="Pfcp-Restore-Fwd" requires="Pfcp-Client-Revive">
            <step name="Pfcp-Session-Create-Again" requires="Pfcp-Client-Revive"
                  exec="bin/pfcp-client-cmd establish"/>
            <step name="Pfcp-Session-Modify-Again" requires="^" delay="1"
                  exec="bin/pfcp-client-cmd modify"/>
        </group>

        <step name="Check-Flows-Reinstalled" requires="Pfcp-Restore-Fwd" delay="2"
              exec="onos-cli-grep ${OCI} up4:read-flows '2 flows found'"/>

        <group name="Check-Traffic-Fwd-After-Pfcp-Client-Failure" requires="Check-Flows-Reinstalled">
            <!-- Downlink -->
            <step name="Downlink-Enb-Recv-Gtp-Fwd" requires="Check-Flows-Reinstalled"
                  exec="mn-cmd enodeb traffic.py recv-gtp -t 10"/>
            <step name="Downlink-Pdn-Send-Udp-Fwd" requires="Check-Flows-Reinstalled" delay="5"
                  exec="mn-cmd pdn traffic.py send-udp -c 10"/>
            <!-- Uplink -->
            <step name="Uplink-Pdn-Recv-Udp-Fwd" requires="Check-Flows-Reinstalled"
                  exec="mn-cmd pdn traffic.py recv-udp -t 10"/>
            <step name="Uplink-Enb-Send-Gtp-Fwd" requires="Check-Flows-Reinstalled" delay="5"
                  exec="mn-cmd enodeb traffic.py send-gtp -c 10"/>
        </group>

        <step name="Pfcp-Clear-Fwd" requires="~Check-Traffic-Fwd-After-Pfcp-Client-Failure"
              exec="bin/pfcp-client-cmd delete"/>

        <step name="Check-Flows-Deleted-Again" requires="^" delay="2"
              exec="onos-cli-grep ${OCI} up4:read-flows '0 flows found'"/>
    </group>
</scenario>