# Wait until ApplicationManager is available
for _ in {1..60}; do
    ${DOCKER_COMPOSE_CMD} logs "$1" | grep "ApplicationManager.*Started" && break || sleep 1
done

${DOCKER_COMPOSE_CMD} logs "$1" | grep "ApplicationManager.*Started"

