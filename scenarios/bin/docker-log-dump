set -e

container=$1

# Perl magic to remove ANSII color codes
# https://superuser.com/questions/380772/removing-ansi-color-codes-from-text-stream
docker-compose logs --no-color "$container" |  perl -pe 's/\e\[[0-9;]*m//g'