for _ in {1..30}; do
    docker-compose ps | grep "pfcp-agent" && \
        # FIXME replace grepping on 'says hello' to 'listening for new PFCP connections' when PFCP will be updated.
        docker-compose logs pfcp-agent | grep "says hello" \
        && exit 0 || sleep 1
done
exit 1
